            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatar16"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/avatar16"
                    android:layout_margin="10dp" />

                <ImageView
                    android:id="@+id/avatar17"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/avatar17"
                    android:layout_margin="10dp" />

                <ImageView
                    android:id="@+id/avatar18"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/avatar18"
                    android:layout_margin="10dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatar19"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/avatar20"
                    android:layout_margin="10dp" />

                <ImageView
                    android:id="@+id/avatar20"
