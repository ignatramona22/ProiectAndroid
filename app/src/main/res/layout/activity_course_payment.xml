<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/babyBlue"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivArrowBackToProfile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/tvPayDash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Course Payment"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivInvoice"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/baseline_featured_play_list_24"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/etPayCourseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course Title"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etPayAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="Amount"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:textSize="16sp"
            android:minLines="3"
            android:gravity="top" />

        <Spinner
            android:id="@+id/spnPaymentMethod"
            android:padding="12dp"
            android:hint="Choose your payment method"
            android:background="@drawable/edittext_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:minLines="3"
            android:gravity="top" />

        <TextView
            android:id="@+id/tvPaymentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Payment date"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/spnPaymentStatus"
            android:padding="12dp"
            android:hint="Choose your payment status"
            android:background="@drawable/edittext_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:minLines="3"
            android:gravity="top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSavePay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="120dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/lightBlue"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="Save"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnClean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/lightBlue"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="Clean"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp">

            <ListView
                android:id="@+id/lvPaymentsList"
                android:layout_width="match_parent"
                android:layout_height="700dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Statistics"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:background="@color/babyBlue"
                android:textColor="@android:color/white" />

            <Spinner
                android:id="@+id/spnFilterStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/paymentStatus" />
            <Button
                android:id="@+id/btnFilterStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/lightBlue"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:textColor="@android:color/white"
                android:text="Filter Payments" />


            <Button
                android:id="@+id/btnCalculateTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/lightBlue"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:textColor="@android:color/white"
                android:text="Calculate Total" />

            <TextView
                android:id="@+id/tvTotalPayments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:text="Total Payments: 0" />


            <EditText
                android:id="@+id/etMinAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter minimum amount"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/btnFilterByMinAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/lightBlue"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:textColor="@android:color/white"
                android:text="Filter Min by Amount" />

        </LinearLayout>



    </LinearLayout>

</ScrollView>
