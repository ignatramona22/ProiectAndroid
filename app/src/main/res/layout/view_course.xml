<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/lightGray1"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/carview_border"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvAddCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Course Title"
                android:textColor="@color/black1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescriptionCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAddCourse"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Description of the course goes here."
                android:textColor="@color/black1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPriceCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDescriptionCourse"
                android:layout_marginTop="8dp"
                android:text="Price: $99.99"
                android:textColor="@color/black1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="137dp"
                android:layout_height="88dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="-42dp"
                android:maxHeight="100dp"
                android:src="@drawable/avatar10" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
