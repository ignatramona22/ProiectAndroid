<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvInvoiceViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username" />

    <TextView
        android:id="@+id/tvInvoiceViewCourses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courses" />

    <TextView
        android:id="@+id/tvInvoiceViewTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount" />

    <TextView
        android:id="@+id/tvInvoiceViewTaxAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tax Amount" />

    <TextView
        android:id="@+id/tvInvoiceViewDiscountAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount Amount" />

</LinearLayout>
