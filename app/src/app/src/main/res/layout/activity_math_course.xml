<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/babyBlue"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivarrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/tvdash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Mathematics"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_background"
            android:padding="16dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_corners">

                <VideoView
                    android:id="@+id/videoMath"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Map of Mathematics"
                android:textColor="#333333"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created by Ramona Ignat"
                android:textColor="#777777"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐ 4.8"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:paddingEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:05 min"
                    android:textColor="#777777"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Playlist (12)"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/textViewDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/rounded_button"
                    android:padding="8dp"
                    android:text="Description"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/textViewIntroduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Introduction - 0:00"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewHistoryOfMath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="History of Mathematics - 0:15"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewModernMath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Modern Mathematics 1:05"
                    android:textColor="#333333"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textViewNumbers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Numbers 2:22"
                    android:textColor="#333333"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textViewGroupTheory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Group Theory - 3:27"
                    android:textColor="#333333"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textViewGeometry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Geometry - 4:10"
                    android:textColor="#333333"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textViewChanges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Changes - 5:12"
                    android:textColor="#333333"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textViewAppliedMath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Applied Mathematics - 5:52"
                    android:textColor="#333333"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textViewPhysics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Physics - 6:09"
                    android:textColor="#333333"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textViewCS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Computer Science - 7:55"
                    android:textColor="#333333"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textViewFoundationMath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Foundations of Mathematics - 8:48"
                    android:textColor="#333333"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textViewOutro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Outro - 10:38"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
